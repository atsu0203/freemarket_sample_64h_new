.single
  .single__header
    .single__header-logo
      = image_tag src="/images/fmarket_logo_red.svg", alt:"merukari" , height: "50px", width: "185px"
.container
  .contents__login-box
    .content__header
      %p アカウントをお持ちでない方はこちら
      = link_to"新規会員登録","#",class:"signup"
  .content-form-box
    %button.facebook-login
      = icon('fab', 'facebook-square',class: "facebook-icon")
      %p Facebookでログイン
    %button.google-login
      %i.fab.fa-google.google-icon
      %p Googleでログイン
    %input.login-information{type: "email", placeholder: "メールアドレス"}
    %input.login-information{type: "password", placeholder: "パスワード"}
    %input.submit-login{type: "submit", value: "ログイン"}
= render "devise/layouts/footer"