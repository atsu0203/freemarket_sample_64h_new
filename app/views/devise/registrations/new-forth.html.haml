= render "devise/layouts/header"
.container
  .contents
    .content-header
      %h1 支払い方法
    .content-form
      %label.text 電話
      %span.required 必須
      .content-form__input-small-box
        %input.input-text{type:"text",placeholder: "半角数字のみ"}
      .content-form__credit-box
        = image_tag src="/images/credit-card_28.png",alt:"credit",width: "50px",height: "40px",class: "credit-card"
        = image_tag src="/images/credit-card_1.png",alt:"credit",width: "50px",height: "40px",class: "credit-card"
        = image_tag src="/images/credit-card_9.png",alt:"credit",width: "50px",height: "40px",class: "credit-card"
        = image_tag src="/images/credit-card_22.png",alt:"credit",width: "50px",height: "40px",class: "credit-card"
        = image_tag src="/images/credit-card_2.png",alt:"credit",width: "50px",height: "40px",class: "credit-card"
      %label.text 有効期限
      %span.required 必須
      .content-form__day-yearbox
        %select.select-day{name: "month"}>
          %option{value: ""} -
          %option{value: "1"} 1
          %option{value: "2"} 2
          %option{value: "3"} 3
          %option{value: "4"} 4
          %option{value: "5"} 5
          %option{value: "6"} 6
          %option{value: "7"} 7
          %option{value: "8"} 8
          %option{value: "9"} 9
          %option{value: "10"} 10
          %option{value: "11"} 11
          %option{value: "12"} 12value: 
        %span.select-content-day 月
        %select.select-day{name: "year"}>
          %option{value: ""} -
          %option{value: "19"} 19
          %option{value: "20"} 20
          %option{value: "21"} 21
          %option{value: "22"} 22
          %option{value: "23"} 23
          %option{value: "24"} 24
          %option{value: "25"} 25
          %option{value: "26"} 26
          %option{value: "27"} 27
          %option{value: "28"} 28
          %option{value: "29"} 29
        %span 年
      %label.text 電話
      %span.required 必須
      .content-form__input-small-box
        %input.input-text{type:"text",placeholder: "カード背面4桁もしくは3桁の番号"}
      .content-form__description-box
        .content-form__description-box__content-box
          %span ?
          カード裏面の番号とは？
      %input.submit{type:"submit", value:"次へ進む"}
