  .contents
    .content-header
      %h1 発送元・お届け先住所入力
    = form_with(model: @user, url: registration_path(resource_name)) do |f|
      .content-form
        %label.text お名前
        %span.required 必須
        .content-form__input-box
          = f.text_field :first_name, autocomplete: "first_name", class:"input-text", placeholder: "例"
          = f.text_field :last_name, autocomplete: "last_name", class:"input-text", placeholder: "例"
        %label.text お名前カナ
        %span.required 必須
        .content-form__input-box
          = f.text_field :first_name_kana, autocomplete: "first_name_kana", class:"input-text", placeholder: "例"
          = f.text_field :last_name_kana, autocomplete: "last_name_kana", class:"input-text", placeholder: "例"
        %label.text 郵便番号
        %span.required 必須
        .content-form__input-small-box
          = f.text_field :post_number, autocomplete: "post_number", class:"input-text", placeholder: "例）123-4567"
        %label.text 都道府県
        %span.required 必須
        .content-form__input-small-box
          = f.collection_select :prefecture_id, Prefecture.all, :id, :name, prompt: "--", class: 'input-text'
        %label.text 市町村区
        %span.required 必須
        .content-form__input-small-box
          = f.text_field :city, autocomplete: "city", class:"input-text", placeholder: "例）和歌山市"
        %label.text 番地
        %span.required 必須
        .content-form__input-small-box
          = f.text_field :town, autocomplete: "town", class:"input-text", placeholder: "例）北出島１５６−７"
        %label.text 建物名
        %span.required-gray 任意
        .content-form__input-small-box
          = f.text_field :building, autocomplete: "building", class:"input-text", placeholder: "例）北出島ブランデ"
        %label.text 電話
        %span.required-gray 任意
        .content-form__input-small-box
          = f.text_field :phone_number, autocomplete: "phone_number", class:"input-text", placeholder: "例）0900000000"
        %input.submit{type:"submit", value:"次へ進む"}
= render "devise/layouts/footer"
