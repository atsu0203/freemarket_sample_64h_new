
.item-buy
  .item-head
    = image_tag 'fmarket_logo_red.svg', alt: ' フリマロゴ', width: "150px", heiht: "50px"
  .single-main
    .single-contener
      .buy-head
        %h2 購入内容の確認

      .buy-item-box
        .buy-item-image
          = image_tag 'bag.jpeg', alt: 'テスト画像',size: '80x66'
        .buy-item-detile

          .buy-item-name
            JEANASIS／ニットタイトスカート／スリットあり／黒／美品
          .buy-item-price
            .buy-item-price__price
              ¥2,500
            .buy-item-price__text 
              （税込）送料込み

      %form.form-buy
        .buy-price      
          %h3.buy-price__tilte
            支払い金額
          %h3.buy-price__price
            ¥2,500
        .buy-point
          = check_box_tag :test1,1,{:checked => "checked"}
          = label_tag :test1, "ポイントを使用（所持ポイント）"
        .buy-shiping-fee
          .item-shipping-fee__title
            %h3 支払い方法 
          .item-shipping-fee__link
            = link_to "#", class: "contents__btn" do
              %i.far.fa-plus-square 登録してください  
        .buy-shipping-adress
          .buy-shipping-adress__title
            %h3 配送先
          .buy-shipping-adress__link
            = link_to "#", class: "contents__btn" do
              %i.far.fa-plus-square 登録してください  
        %buttom.btn
          購入する

  .item-foot
    %ul
      %li プライバシーポリシー
      %li メルカリ利用規約
      %li 特定商取引に関する表記
    .foot-logo
      = image_tag 'logo_gray.svg', alt: ' フリマロゴ', width: "150px", heiht: "50px"
    .copy-write    
      &copy; Fmarket, Inc.

      

  
   

