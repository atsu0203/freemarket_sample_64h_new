.Outline
  =render 'shared/header'
  .pan
    %ul.pan
      %li.bread
        - breadcrumb :profile
        = breadcrumbs separator: "&rsaquo;"
  .side-profile
    =render "shared/side-list"
    .side-profile__contents
      %h2 プロフィール
      .side-profile__contents__back-image
        .side-profile__contents__back-image__box
          .side-profile__contents__back-image__box__dual
            = image_tag "mypage.jpg",size:"60x60",class: "profile-icon"
            %input.profile-text{placeholder: "#{@user.sns_name}",type: "text",value: ""}
      .side-profile__contents__under
        %textarea.profile-comment{placeholder: "例）こんにちは☆"}
        %button.change-btn{type: "submit",value: ""}
          変更する
  =render 'shared/footer'