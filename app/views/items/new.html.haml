.listing__wrapper
  .listing__header
    .listing__header-logo
      = image_tag src="fmarket_logo_red.svg", alt:"merukari" , height: "50px", width: "185px"
  .listing__contents
    = form_for @item do |f|
      .listing__contents__info
        %h2 商品の情報を入力
      .listing__contents__image
        .listing__contents__image__head
          %h3 出品画像
          %span.required-1
            必須
        .listing__contents__image__text
          最大10枚までアップロードできます
        .image__box
          =f.fields_for :images do |i|
            .dropzone-container
              #preview
              .dropzone-area
                .input_area
                  =i.file_field :image
                  -# =i.hidden_field :id, value: i.object.image.url

      .listing__contents__name
        .group
          %label 商品名 
          %span.required 必須
          %br/
          =f.text_field :name, class: "name", placeholder: "商品名(必須40文字まで）"
        .group
          %label 商品の説明
          %span.required 必須
          %br/
          =f.text_area :description, class: "text", placeholder: "商品の説明（必須1,000文字以内）（色、素材、重さ、定価、注意点など）例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。"
      .listing__contents__detail
        %h3 商品の詳細
        .form-box
          .group
            %label カテゴリー
            %span.required 必須
            .select
              =f.collection_select :category_id, Category.all, :id, :name, prompt: "---", class: "category"
              %br/
          .group
            %label 商品の状態
            %span.required 必須
            .select
              =f.select :status, ["---", "新品、未使用", "未使用に近い", "目立った傷や汚れなし", "やや傷や汚れあり", "傷や汚れあり", "全体的に状態が悪い"]
      .listing__contents__deliver
        %h3 配送について
        .form-box
          .group
            %label 配送料の負担
            %span.required 必須
            .select
              =f.select :shipping_burden, ["---", "送料込み（出品者負担)", "着払い（購入者負担)"]
              %br/
          .group
            %label 発送元の地域
            %span.required 必須
            .select-1
              =f.collection_select :prefecture_id, Prefecture.all, :id, :name, prompt: "---", class: "prefecture"
              %br/
          .group
            %label 発送までの日数
            %span.required 必須
            .select
              =f.select :shipping_date, ["---", "1~2日で発送", "2~3日で発送", "4~7日で発送"]
      .listing__contents__price
        %h3 販売価格(300~9,999,999)
        %ul.price-box
          %li.prices
            .group
              .group__left
                価格
                %span.required-2 必須
              .group__right
                .input
                  ￥
                =f.text_field :price, class: "price", placeholder: "例）300"

      .listing__contents__confirms
        .listing__contents__confirms-confirm
          %p 
            =link_to '禁止されている出品', '#'
            、
            =link_to '行為', '#'
            を必ずご確認ご確認ください。
          %p 
            またブランド品でシリアルナンバー等がある場合はご記載ください。
            =link_to '偽ブランドの販売', '#' 
            は犯罪あり処罰される可能性があります。
          %p 
            また、出品をもちまして
            =link_to '加盟販売店規約', '#'
            に同意したことになります。
        =f.submit '出品する', class: "submit"
        .back-btn
          =link_to 'もどる', "/"
        
    .listing__footer
      .nav
        %ul
          %li プライバシーポリシー
          %li メルカリ利用規約
          %li 特定商取引に関する表記
      .listing__footer__logo
        = image_tag src="/images/logo_gray.svg", alt:"merukari"
      %p © Mercari, Inc.

